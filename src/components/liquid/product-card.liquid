<div class="product-card">
  <div class="product-image-container">
    {% if product.compare_at_price and product.compare_at_price > product.price %}
      <div class="discount-badge">
        SAVE {{ product.compare_at_price | minus: product.price | divided_by: product.compare_at_price | times: 100 | round }}%
      </div>
    {% endif %}
    {% if product.bestseller %}
      <div class="bestseller-badge">BEST SELLER</div>
    {% endif %}
    <div class="product-image">
      {% if product.image %}
        <img src="{{ product.image }}" alt="{{ product.title }}" loading="lazy">
      {% else %}
        <div class="product-placeholder">
          <svg class="placeholder-icon" viewBox="0 0 24 24" fill="none">
            <path d="M21 19V5C21 3.9 20.1 3 19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19ZM8.5 13.5L11 16.51L14.5 12L19 18H5L8.5 13.5Z" fill="currentColor"/>
          </svg>
          <span>No Image</span>
        </div>
      {% endif %}
    </div>
  </div>
  <div class="product-info">
    <h3 class="product-title">{{ product.title }}</h3>
    {% if product.rating and product.review_count %}
      <div class="product-rating">
        <div class="stars">
          {% for i in (1..5) %}
            {% if i <= product.rating %}
              <span class="star filled">★</span>
            {% else %}
              <span class="star empty">☆</span>
            {% endif %}
          {% endfor %}
        </div>
        <span class="rating-text">{{ product.rating }} ({{ product.review_count }})</span>
      </div>
    {% endif %}
    <p class="product-description">{{ product.description | truncate: 120 }}</p>
    <div class="product-pricing">
      {% if product.compare_at_price and product.compare_at_price > product.price %}
        <div class="price-container sale">
          <div class="price-row">
            <span class="current-price">${{ product.price | money_without_currency }}</span>
            <span class="original-price">${{ product.compare_at_price | money_without_currency }}</span>
          </div>
        </div>
      {% else %}
        <div class="price-container">
          <div class="price-row">
            <span class="current-price">${{ product.price | money_without_currency }}</span>
            <a href="#" class="compare-link">Compare</a>
          </div>
        </div>
      {% endif %}
    </div>
    <div class="product-actions">
      <button class="add-to-cart-btn" type="button">
        Add to Cart
      </button>
    </div>
  </div>
</div>

